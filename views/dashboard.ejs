<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 font-sans">

    <div class="max-w-4xl mx-auto p-6">
      <h1 class="text-3xl font-bold text-gray-800 mb-6">Dashboard</h1>
      
      <ul class="space-y-4">
        <% users.forEach((user) => { %>
          <li class="flex justify-between items-center p-4 bg-white shadow-lg rounded-lg">
            <span class="text-lg font-semibold text-gray-700"><%= user.username %></span>
            <a href="/users/<%= user.id %>" class="text-blue-500 hover:underline">View</a>
          </li>
        <% }) %>
      </ul>
    </div>

  </body>
</html>
